{
  "eslint.alwaysShowStatus": true,
  "eslint.options": {
    "extensions": [ ".js, .jsx, .ts, .tsx" ]
  },
  "eslint.validate": [
    "javascript",
    "typescript", 
    "typescriptreact",
  ],
  "[javascript]": {
    "editor.formatOnSave": false
  },
  "files.eol": "\n",
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": true
  },
  "terminal.integrated.inheritEnv": true
}
{
  "name": "react-packages",
  "version": "1.0.0",
  "description": "React packages monorepo",
  "main": "index.js",
  "scripts": {
    "start": "start-storybook -s .msw -p 6006",
    "lerna:init": "npx lerna bootstrap",
    "lerna:publish": "npx lerna publish",
    "lerna:publish-canary": "npx lerna publish --canary",
    "build": "build-storybook",
    "build-packages": "npx lerna run build",
    "test": "jest --passWithNoTests",
    "lint": "run-s -c lint:js lint:css",
    "lint:fix": "run-s -c lint:js:fix lint:css:fix",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css:fix": "npm run lint:css -- --fix",
    "lint:js": "eslint --no-error-on-unmatched-pattern ./packages/**/*.{js,jsx}",
    "lint:css": "npx stylelint ./packages/**/*.css",
    "package:create": "node package-create.js",
    "postinstall": "npx simple-git-hooks"
  },
  "keywords": [],
  "author": "Tourmaline Core",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "^7.13.14",
    "@babel/core": "^7.13.15",
    "@babel/plugin-proposal-class-properties": "^7.13.0",
    "@babel/preset-env": "^7.13.15",
    "@babel/preset-react": "^7.13.13",
    "@babel/preset-typescript": "7.18.6",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^18.0.0",
    "@rollup/plugin-node-resolve": "^11.2.1",
    "@rollup/plugin-url": "^6.0.0",
    "@storybook/addon-actions": "^6.3.9",
    "@storybook/addon-essentials": "^6.3.9",
    "@storybook/addon-knobs": "^6.3.1",
    "@storybook/react": "^6.3.9",
    "@svgr/rollup": "^5.5.0",
    "@svgr/webpack": "^5.5.0",
    "@typescript-eslint/eslint-plugin": "5.39.0",
    "@typescript-eslint/parser": "5.39.0",
    "autoprefixer": "^10.2.5",
    "babel-eslint": "^10.1.0",
    "babel-jest": "^26.6.3",
    "copy-dir": "^1.3.0",
    "cross-env": "^7.0.3",
    "css-loader": "^5.2.1",
    "edit-json-file": "^1.6.0",
    "eslint": "^7.24.0",
    "eslint-config-airbnb": "^18.2.1",
    "eslint-config-airbnb-typescript": "17.0.0",
    "eslint-import-resolver-webpack": "^0.13.1",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.3.5",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-react": "^7.23.2",
    "jest": "^26.6.3",
    "lerna": "^4.0.0",
    "msw": "^0.35.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.2.10",
    "postcss-url": "^10.1.3",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rimraf": "^3.0.2",
    "rollup": "^2.45.2",
    "rollup-plugin-peer-deps-external": "^2.2.4",
    "rollup-plugin-postcss": "^4.0.1",
    "rollup-plugin-terser": "^7.0.2",
    "simple-git-hooks": "^2.3.1",
    "style-loader": "^2.0.0",
    "stylelint": "^13.12.0",
    "stylelint-config-standard": "^21.0.0",
    "stylelint-order": "^4.1.0",
    "stylelint-scss": "^3.19.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint"
  },
  "msw": {
    "workerDirectory": ".msw"
  }
}

{
  "name": "react-packages",
  "version": "1.0.0",
  "description": "React packages monorepo",
  "main": "index.js",
  "scripts": {
    "start": "start-storybook -p 6006",
    "lerna:init": "npx lerna bootstrap",
    "lerna:publish": "npx lerna publish",
    "lerna:publish-canary": "npx lerna publish --canary",
    "build": "build-storybook",
    "build-packages": "npx lerna run build",
    "test": "echo \"Error: no test specified\" && exit 0",
    "lint": "run-s -c lint:js lint:css",
    "lint:fix": "run-s -c lint:js:fix lint:css:fix",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css:fix": "npm run lint:css -- --fix",
    "lint:js": "eslint --no-error-on-unmatched-pattern ./packages/**/*.{js,jsx}",
    "lint:css": "npx stylelint ./packages/**/*.css",
    "package:create": "node package-create.js",
    "postinstall": "npx simple-git-hooks"
  },
  "keywords": [],
  "author": "Tourmaline Core",
  "license": "MIT",
  "devDependencies": {
    "@babel/cli": "7.12.8",
    "@babel/core": "7.12.3",
    "@babel/preset-env": "7.12.1",
    "@babel/preset-react": "7.12.5",
    "@rollup/plugin-babel": "5.2.2",
    "@rollup/plugin-commonjs": "17.0.0",
    "@rollup/plugin-node-resolve": "11.0.0",
    "@rollup/plugin-url": "6.0.0",
    "@storybook/addon-actions": "6.1.14",
    "@storybook/addon-essentials": "6.1.14",
    "@storybook/addon-knobs": "6.1.14",
    "@storybook/react": "6.1.14",
    "@svgr/rollup": "5.5.0",
    "@svgr/webpack": "5.5.0",
    "autoprefixer": "9.8.6",
    "babel-eslint": "10.1.0",
    "copy-dir": "1.3.0",
    "cross-env": "7.0.3",
    "css-loader": "5.0.1",
    "edit-json-file": "1.5.0",
    "eslint": "7.13.0",
    "eslint-config-airbnb": "18.2.1",
    "eslint-import-resolver-webpack": "0.13.0",
    "eslint-plugin-import": "2.22.1",
    "eslint-plugin-jsx-a11y": "6.4.1",
    "eslint-plugin-react": "7.21.5",
    "lerna": "3.22.1",
    "npm-run-all": "4.1.5",
    "postcss": "8.1.14",
    "postcss-url": "9.0.0",
    "react": "17.0.1",
    "react-dom": "17.0.1",
    "rimraf": "3.0.2",
    "rollup": "2.34.0",
    "rollup-plugin-peer-deps-external": "2.2.4",
    "rollup-plugin-postcss": "3.1.8",
    "rollup-plugin-terser": "7.0.2",
    "simple-git-hooks": "^2.3.1",
    "style-loader": "2.0.0",
    "stylelint": "13.8.0",
    "stylelint-config-standard": "20.0.0",
    "stylelint-order": "4.1.0",
    "stylelint-scss": "3.18.0"
  },
  "simple-git-hooks": {
    "pre-commit": "npm run lint"
  }
}

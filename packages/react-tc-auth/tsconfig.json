{
    "compilerOptions": {
      "target": "es5",
      "lib": [
        "dom",
        "dom.iterable",
        "es5"
      ],
      "allowJs": false,
      "skipLibCheck": true,
      "strict": true,
      "strictPropertyInitialization": false, 
      "forceConsistentCasingInFileNames": true,
      "noEmit": true,
      "esModuleInterop": true,
      "module": "es2015",
      "moduleResolution": "node",
      "isolatedModules": true,
      "jsx": "preserve",
      "resolveJsonModule": true
    },
    "include": [
      "**/*.ts",
      "**/*.tsx"
    ],
    "exclude": [
      "node_modules"
    ]
  }
  
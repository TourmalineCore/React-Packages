{
    "compilerOptions": {
    "target": "es6",
    "lib": [
        "dom",
        "dom.iterable",
        "es6"
    ], 
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "strictPropertyInitialization": false, 
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true, 
    "module": "es6",
    "moduleResolution": "node",
    "isolatedModules": true,
    "jsx": "preserve",
    "resolveJsonModule": true
    },
    "include": [
        "./src/**/*", 
        "**/*.tsx"
    ],
    "exclude": [
        "node_modules"
    ]
}